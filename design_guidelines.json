{
  "identity": {
    "name": "InterviewIQ",
    "archetype": "Soft Utility",
    "vibe": "The Architect of Your Career - Professional, Calm, Intelligent",
    "principles": [
      "Fusion over Imitation: Mix Swiss precision with Organic warmth",
      "Content is King: Data tells the story",
      "Negative Space: 2x standard spacing for clarity",
      "Contrast: High contrast for text, subtle for structure"
    ]
  },
  "typography": {
    "fonts": {
      "heading": {
        "family": "Outfit",
        "url": "https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap",
        "usage": "Headings (h1-h4), Big Stats, Navigation",
        "weights": ["400", "600", "700"]
      },
      "body": {
        "family": "Plus Jakarta Sans",
        "url": "https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap",
        "usage": "Paragraphs, UI Labels, Inputs, Buttons",
        "weights": ["400", "500", "600"]
      },
      "mono": {
        "family": "JetBrains Mono",
        "url": "https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap",
        "usage": "Code snippets, Technical Interview Questions, API Keys"
      }
    },
    "rules": [
      "Headings > 32px must use tracking-tight",
      "Overlines/Labels must be Uppercase + tracking-widest + text-xs",
      "Body text should be leading-relaxed",
      "Never use pure black (#000000) for text; use slate-900"
    ]
  },
  "colors": {
    "palette": {
      "primary": {
        "name": "Indigo Focus",
        "base": "indigo-600",
        "hover": "indigo-700",
        "hex": "#4F46E5",
        "usage": "Primary Buttons, Active States, Key Brand Elements"
      },
      "secondary": {
        "name": "Teal Growth",
        "base": "teal-500",
        "hex": "#14B8A6",
        "usage": "Success States, Growth Charts, Progress Bars"
      },
      "accent": {
        "name": "Violet AI",
        "base": "violet-500",
        "hex": "#8B5CF6",
        "usage": "AI Feedback, Insights, Magic Moments"
      },
      "background": {
        "light": "slate-50",
        "dark": "slate-950",
        "surface_light": "white",
        "surface_dark": "slate-900"
      },
      "text": {
        "primary": "slate-900",
        "secondary": "slate-500",
        "muted": "slate-400"
      }
    },
    "gradients": {
      "hero": "bg-gradient-to-br from-indigo-50 via-white to-teal-50",
      "card_hover": "hover:bg-slate-50/50",
      "ai_glow": "shadow-[0_0_15px_rgba(139,92,246,0.3)]"
    }
  },
  "layout": {
    "spacing": {
      "container_padding": "p-6 md:p-8 lg:p-12",
      "section_gap": "gap-8 md:gap-12",
      "element_gap": "gap-4"
    },
    "grid_systems": {
      "dashboard": "grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6",
      "interview": "grid grid-cols-1 lg:grid-cols-12 gap-8",
      "marketing": "grid grid-cols-1 md:grid-cols-12 gap-12"
    },
    "bento_rules": [
      "Summary Cards: col-span-1",
      "Main Chart: col-span-2 row-span-2 (or col-span-3)",
      "List/Feed: col-span-1 row-span-2",
      "Always use h-full on children to stretch"
    ]
  },
  "components": {
    "card": {
      "style": "bg-white border border-slate-200 shadow-sm rounded-xl",
      "hover": "transition-all duration-300 hover:shadow-md hover:-translate-y-1",
      "padding": "p-6"
    },
    "button": {
      "primary": "bg-indigo-600 text-white hover:bg-indigo-700 rounded-full px-6 py-2.5 font-medium shadow-sm hover:shadow-indigo-500/25 transition-all",
      "secondary": "bg-white text-slate-700 border border-slate-200 hover:bg-slate-50 rounded-full px-6 py-2.5 font-medium transition-all",
      "ghost": "text-slate-600 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg px-4 py-2"
    },
    "input": {
      "style": "bg-white border-slate-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 rounded-lg h-11"
    },
    "badge": {
      "style": "rounded-full px-3 py-1 text-xs font-semibold tracking-wide uppercase",
      "success": "bg-teal-50 text-teal-700 border border-teal-200",
      "warning": "bg-amber-50 text-amber-700 border border-amber-200",
      "neutral": "bg-slate-100 text-slate-600 border border-slate-200"
    }
  },
  "assets": {
    "images": {
      "hero_main": {
        "url": "https://images.pexels.com/photos/5922538/pexels-photo-5922538.jpeg",
        "alt": "Confident professional in interview setting",
        "usage": "Landing Page Hero - Right side or Background"
      },
      "team_collaboration": {
        "url": "https://images.pexels.com/photos/7163354/pexels-photo-7163354.jpeg",
        "alt": "Diverse team collaborating",
        "usage": "About Us / Why Us Section"
      },
      "workspace_abstract": {
        "url": "https://images.unsplash.com/photo-1748346918817-0b1b6b2f9bab",
        "alt": "Modern clean workspace",
        "usage": "Backgrounds, Login Page Side Panel"
      },
      "interview_context": {
        "url": "https://images.unsplash.com/photo-1758519290111-bfbd61b32d49",
        "alt": "Professional interview discussion",
        "usage": "Features Section - Mock Interview"
      }
    },
    "icons": {
      "library": "lucide-react",
      "style": "stroke-width={1.5} size={20}"
    }
  },
  "motion": {
    "library": "framer-motion",
    "variants": {
      "fadeInUp": {
        "initial": { "opacity": 0, "y": 20 },
        "animate": { "opacity": 1, "y": 0 },
        "transition": { "duration": 0.5, "ease": "easeOut" }
      },
      "staggerContainer": {
        "animate": { "transition": { "staggerChildren": 0.1 } }
      },
      "scaleIn": {
        "initial": { "opacity": 0, "scale": 0.95 },
        "animate": { "opacity": 1, "scale": 1 },
        "transition": { "duration": 0.3 }
      }
    }
  },
  "accessibility": {
    "rules": [
      "Ensure 4.5:1 contrast ratio for normal text",
      "Use focus-visible:ring-2 for keyboard navigation",
      "All interactive elements must have aria-labels if no text is present",
      "Respect prefers-reduced-motion"
    ]
  },
  "universal_guidelines": [
    "Do not use generic gradients.",
    "Do not center align everything; prefer left-align for readability.",
    "Use 2-3x more spacing than typical designs.",
    "Every interaction needs micro-animations.",
    "Use 'sonner' for toasts.",
    "Components must use named exports.",
    "Pages must use default exports."
  ]
}